{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://raw.githubusercontent.com/alanaberdeen/AIDA/master/schemas/v0_2.json",
  "definitions": {
    "style": {
      "type": "object",
      "properties": {
        "color": {
          "type": "array",
          "minItems": 3,
          "maxItems": 3,
          "items": {
            "type": "integer",
            "minimum": 0,
            "maximum": 255
          }
        },
        "filled": {
          "type": "boolean",
          "default": true
        },
        "transparency": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "default": 1
        }
      },
      "required": ["color"]
    },
    "coordinate": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": {
        "type": "number",
        "minimum": 0
      }
    },
    "point": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Point"
          ]
        },
        "coordinates": {
          "$ref": "#/definitions/coordinate"
        }
      },
      "required": [
        "type",
        "coordinates"
      ]
    },
    "lineString": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "LineString"
          ]
        },
        "coordinates": {
          "type": "array",
          "minItems": 2,
          "items": {
            "$ref": "#/definitions/coordinate"
          }
        }
      },
      "required": [
        "type",
        "coordinates"
      ]
    },
    "polygon": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Polygon"
          ]
        },
        "coordinates": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "array",
            "minItems": 3,
            "items": {
              "$ref": "#/definitions/coordinate"
            }
          }
        }
      },
      "required": [
        "type",
        "coordinates"
      ]
    }
  },
  "type": "object",
  "properties": {
    "header": {
      "type": "object",
      "properties": {
        "imageHash": {
          "type": "string"
        },
        "schemaVersion": {
          "type": "string"
        },
        "signature": {
          "type": "string"
        },
        "timestamp": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "annotation": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "layers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "features": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "class": {
                      "type": "integer",
                      "minimum": 0
                    },
                    "geometry": {
                      "oneOf": [
                        {
                          "$ref": "#/definitions/point"
                        },
                        {
                          "$ref": "#/definitions/lineString"
                        },
                        {
                          "$ref": "#/definitions/polygon"
                        }
                      ]
                    },
                    "comment": {
                      "type": "string"
                    },
                    "modelHash": {
                      "type": "string"
                    },
                    "validations": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "class": {
                            "type": "string"
                          },
                          "decisionTime": {
                            "type": "number",
                            "minimum": 0
                          },
                          "validatorSignature": {
                            "type": "string"
                          },
                          "timestamp": {
                            "type": "number",
                            "minimum": 0
                          },
                          "validatorId": {
                            "type": "string"
                          }
                        },
                        "required": [
                          "class",
                          "timestamp",
                          "validatorId"
                        ]
                      }
                    },
                    "creator": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "enum": [
                            "Person",
                            "Model"
                          ]
                        },
                        "uid": {
                          "type": "string"
                        },
                        "timestamp": {
                          "type": "integer",
                          "minimum": 0
                        }
                      },
                      "required": [
                        "type",
                        "uid",
                        "timestamp"
                      ]
                    }
                  },
                  "required": [
                    "id",
                    "class",
                    "geometry"
                  ]
                }
              }
            },
            "required": [
              "name",
              "features"
            ]
          }
        }
      },
      "required": [
        "layers"
      ]
    },
    "classes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "minimum": 0
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "style": {
            "$ref": "#/definitions/style"
          }
        },
        "required": [
          "id",
          "style",
          "name"
        ]
      }
    }
  },
  "required": [
    "header",
    "classes"
  ]
}
